{
	"name": "d1-template",
	"description": "Cloudflare's native serverless SQL database.",
	"private": true,
	"cloudflare": {
		"label": "Worker + D1 Database",
		"products": [
			"Workers",
			"D1"
		],
		"categories": [
			"storage"
		],
		"docs_url": "https://developers.cloudflare.com/d1/",
		"preview_icon_url": "https://imagedelivery.net/wSMYJvS3Xw-n339CbDyDIA/6c63cca8-354a-4951-45a0-d58769ac6f00/public",
		"preview_image_url": "https://imagedelivery.net/wSMYJvS3Xw-n339CbDyDIA/aa6158f1-7711-4485-f134-a8c802c0a800/preview",
		"publish": true
	},
	"devDependencies": {
		"drizzle-kit": "^0.31.6",
		"tsx": "^4.20.6",
		"typescript": "5.8.3",
		"wrangler": "^4.45.3"
	},
	"scripts": {
		"cf-typegen": "wrangler types",
		"check": "tsc && wrangler deploy --dry-run && biome check ./src",
		"fix": "biome check --write ./src",
		"deploy": "wrangler deploy",
		"dev": "wrangler dev",
		"predeploy": "wrangler d1 migrations apply DB --remote",
		"db:generate": "drizzle-kit generate",
		"db:migrate:local": "wrangler d1 migrations apply DB --local",
		"db:migrate:remote": "wrangler d1 migrations apply DB --remote"
	},
	"dependencies": {
		"@hono/valibot-validator": "^0.5.3",
		"bcryptjs": "^3.0.3",
		"dotenv": "^17.2.3",
		"drizzle-orm": "^0.44.7",
		"hono": "^4.10.5",
		"valibot": "^1.1.0"
	}
}
